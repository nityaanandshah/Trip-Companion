// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  age       Int?
  avatarUrl String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tripsOwned    Trip[]           @relation("TripOwner")
  tripAttendees TripAttendee[]
  bookmarks     TripBookmark[]
  notifications Notification[]
  chatMessages  ChatMessage[]
  chatReads     ChatRead[]

  @@map("users")
}

model Trip {
  id                 String   @id @default(cuid())
  ownerId            String
  title              String
  description        String?
  destination        String
  startDate          DateTime
  endDate            DateTime
  isTentative        Boolean  @default(true)
  budgetMin          Int?
  budgetMax          Int?
  requiredGroupSize  Int      @default(1)
  currentGroupSize   Int      @default(1)
  status             String   @default("open") // draft, open, full, completed
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Relations
  owner        User           @relation("TripOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  images       TripImage[]
  attendees    TripAttendee[]
  bookmarks    TripBookmark[]
  chatMessages ChatMessage[]
  chatReads    ChatRead[]

  @@map("trips")
}

model TripImage {
  id        String   @id @default(cuid())
  tripId    String
  imageUrl  String
  orderIndex Int      @default(0)
  createdAt DateTime @default(now())

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@map("trip_images")
}

model TripAttendee {
  id          String   @id @default(cuid())
  tripId      String
  userId      String
  status      String   @default("pending") // pending, approved, rejected
  role        String   @default("attendee") // owner, attendee
  requestedAt DateTime @default(now())
  respondedAt DateTime?

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tripId, userId])
  @@map("trip_attendees")
}

model TripBookmark {
  id        String   @id @default(cuid())
  tripId    String
  userId    String
  createdAt DateTime @default(now())

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tripId, userId])
  @@map("trip_bookmarks")
}

model ChatMessage {
  id        String   @id @default(cuid())
  tripId    String
  userId    String
  content   String   @db.Text
  createdAt DateTime @default(now())

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tripId, createdAt])
  @@map("chat_messages")
}

model ChatRead {
  id         String   @id @default(cuid())
  tripId     String
  userId     String
  lastReadAt DateTime @default(now())
  updatedAt  DateTime @updatedAt

  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tripId, userId])
  @@map("chat_reads")
}

model Notification {
  id         String   @id @default(cuid())
  userId     String
  type       String   // join_request, request_approved, request_rejected, etc.
  referenceId String?  // tripId, attendeeId, etc.
  message    String
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

